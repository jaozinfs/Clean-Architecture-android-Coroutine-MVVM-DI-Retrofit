<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

          package="com.prosegur.s">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.prosegur.starwars.SWApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:usesCleartextTraffic="true"
            android:theme="@style/AppTheme">


        <!-- SW Activities -->
        <activity android:name="com.prosegur.starwars.features.starwars.view.details.SWDetailsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>


            </intent-filter>
        </activity>
        <activity android:name="com.prosegur.starwars.features.starwars.view.list.SWListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

            </intent-filter>
        </activity>


        <!--  TH MOVIE ACTIVITYS -->
        <activity android:name="com.prosegur.starwars.features.thmovie.view.THListActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>